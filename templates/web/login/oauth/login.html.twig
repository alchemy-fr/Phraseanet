{#
    require recaptach_display
#}
{% extends "login/layout/middle-bar-layout.html.twig" %}

{% import "login/common/macros.html.twig" as auth_macro %}

{% set recaptcha_display = false %}

{% block title %}
    {% trans "Login" %}
{% endblock %}

{% block content %}
    <div class="well-large sidebar-block text-center">
        <div class="row-fluid">
            <div class="span12">
                {% block footer_logo %}
                    {{ parent() }}
                {% endblock footer_logo %}
            </div>
        </div>
    </div>
    <div class="well-large sidebar-block">
        <div class="row-fluid">
            <div class="span12 authentication-sidebar-title">
                <div class="text-title">
                    {% trans "Hi, Please log in" %}
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                {{ auth_macro.flashes() }}
                <form
                     ng-controller="LoginFormController"
                     novalidate
                     name="loginForm"
                     ng-submit="submit();"
                     method="POST"
                     action="{{ path("login_authenticate") }}"
                     check-form-submission
                >
                    <div class="row-fluid">
                        <div class="span12">
                            {{ auth_macro.fieldInput(form.email, "loginForm", 'icon-envelope') }}
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            {{ auth_macro.fieldInput(form.password, "loginForm", 'icon-lock') }}
                        </div>
                    </div>
                    <div class="text-right">
                        <a class="forget-password-link" href="{{ path("login_forgot_password") }}">
                            {% trans "Forgot password?" %}
                        </a>
                    </div>
                    {% if recaptcha_display %}
                        <div class="row-fluid">
                            <div class="span12">
                                {{ macro.captcha(recaptcha) }}
                            </div>
                        </div>
                    {% endif %}

                    {{ form_rest(form) }}

                    <div class="row-fluid">
                        <div class="span12">
                            <button type="submit" class="btn btn-success btn-trigger">
                                {% trans "Connexion" %}
                            </button>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            {{ auth_macro.checkboxInput(form['remember-me']) }}
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="well-large sidebar-block">
        <div class="row-fluid">
            <div class="span12 text-center">
                {% trans "Or login with" %}
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12 text-center">
                {{ auth_macro.providerList() }}
            </div>
        </div>
    </div><!-- /sidebar block -->
    <div class="well-large sidebar-block text-center">
        <div class="row-fluid">
            <div class="span12">
                {% block tou_link %}
                    {{ parent() }}
                {% endblock tou_link %}
            </div>
        </div>
    </div>
    <div class="well-large sidebar-block last-child text-center">
        <div class="row-fluid">
            <div class="span12">
                {% block copyright %}
                    {{ parent() }}
                {% endblock copyright %}
            </div>
        </div>
    </div>
{% endblock %}

{% block footer_scaffholding %}
    {# empty footer #}
{% endblock footer_scaffholding %}
