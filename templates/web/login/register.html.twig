{% extends "login/layout/sidebar-layout.html.twig" %}

{% import "login/common/macros.html.twig" as auth_macro %}

{% block title %}
    {% trans "Register" %}
{% endblock %}

{% block sidebar %}
    <div class="well-large sidebar-block">
        <div class="row-fluid">
            <div class="span12 authentication-sidebar-title">
                <div class="text-title">
                    {% trans "Inscription" %}
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <a id="register-classic" href="{{ path("login_register_classic") }}" class="btn btn-success btn-trigger input-block-level">
                    <span class="pull-left">
                        {% trans "Create an account manually" %}
                    </span>
                    <span class="pull-right">
                        <i class="icon-arrow-right icon-white"></i>
                    </span>
                </a>
            </div>
        </div>
    </div>

    {% if app['authentication.providers'] | count > 0 %}
    <div class="well-large sidebar-block">
        <div class="row-fluid">
            <div class="span12 text-center">
                {% trans "Or login with" %}
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12 text-center">
                {{ auth_macro.providerList() }}
            </div>
        </div>
    </div>
    {% endif %}
{% endblock %}
