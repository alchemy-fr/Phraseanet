                                        </td>
                                    </tr>
                                {% endif %}
                                {% for collId, collName in baseInsc['Colls'] %}
                                    {% set baseId = sbasId |base_from_coll(collId, app) %}
                                    <tr>
                                        <td style="text-align: right;">{{ collName }}</td>
                                        <td style="text-align: left;">
