{% extends "login/layout/base-layout.html.twig" %}

{% block title %}
    {{ instance_title|default('Phraseanet') }}
{% endblock %}

{% block content_scaffholding %}
    <div class="row-fluid">
        <div class="span8 left-content">
            <div class="row-fluid">
                <div class="span12">
                    <div class="logo">
                        {% block logo %}{% endblock %}
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="header">
                        {% block content_showcase %}
                            <div class="text-title">
                                {% block main_title %}{% endblock %}
                            </div>
                            <a class="visible-phone text-right" data-toggle="collapse" data-target="#headerDetail">{{ "More" | trans }} ...</a>
                            <p id="headerDetail" class="collapse">
                                {% block short_presentation %}{% endblock %}
                            </p>
                        {% endblock content_showcase %}
                    </div>
                </div>
            </div>
            <div class="row-fluid hidden-phone">
                <div class="span12">
                    <div class="content">
                        {% block left_content %}
                            {% include "login/include/main-content.html.twig" %}
                        {% endblock %}
                    </div>
               </div>
            </div>
        </div>
        <div class="span4 right-content">
            <div class="authentication-sidebar">
                <div class="row-fluid">
                    <div class="span12">
                        {% include "login/include/language-block.html.twig" %}
                     </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        {% block sidebar %} {% endblock %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
