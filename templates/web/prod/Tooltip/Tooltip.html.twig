    <div class="arrow"></div>
    <div class="popover-inner" style="width:auto;">
        <h3 class="popover-title">
            {% if title %}
                {{ title }}
            {% endif %}
            <button data-dismiss="modal" class="close tooltip_closer" style="display:none;">Ã—</button>
        </h3>
        <div class="popover-content">
            {% block content %}{% endblock %}
        </div>
    </div>
</div>
