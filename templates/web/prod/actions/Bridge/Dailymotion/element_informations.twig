<ul>
  <li>
    {% set nb_view = element.get_view_count|default(0) %}
    {% if nb_view == 0 %}
      {% trans %}
        {{ nb_view }} vue
      {% endtrans %}
    {% else %}
      {% trans %}
        {{ nb_view }} vue
      {% plural nb_view %}
        {{ nb_view }} vues
      {% endtrans %}
    {% endif %}
  </li>
  {% if element.get_ratings is defined %}
    {% set nb_rating = element.get_ratings|default(0) %}
      {% if element.get_rating > 0 %}
         <li>
           {% trans %}
            {{ nb_rating }} like
           {% plural nb_rating %}
            {{ nb_rating }} likes
           {% endtrans %}
          </li>
      {% endif %}
   {% endif %}
</ul>
