<script>
    function htmlEncode(str) {
        if (str != null) {
            return str.replace(/[&"'<>]/g, function (c) {
                switch (c) {
                    case "&":
                        return "&amp;";
                    case "'":
                        return "&#39;";
                    case '"':
                        return "&quot;";
                    case "<":
                        return "&lt;";
                    case ">":
                        return "&gt;";
                }
            });
        }
        return ;
    }
</script>
