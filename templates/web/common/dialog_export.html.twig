                        $('#ftp_form_selector').bind('change',function(){
                        $('#ftp .ftp_form').hide();
                        $('#ftp .ftp_form_'+$(this).val()).show();
                            $('.ftp_folder_check', p4.Dialog.get(1).getDomElement()).unbind('change').bind('change', function(){
