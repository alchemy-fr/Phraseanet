            <label for="type_{{id}}_title" class="radio">
                <input type="radio" name="type" id="type_{{id}}_title" {% if default_export_title == "original" %}checked{% endif %} value="originalname" />
                {% trans 'export::titre: nom original du document' %}
            </label>
        </div>
    </div>
{% endmacro %}

