                                    <dd>{{ row['societe'] }}</dd>
                                    <dt>{{ 'admin::compte-utilisateur poste' | trans }}</dt>
                                    <dd>{{ row['fonction'] }}</dd>
                                    <dt>{{ 'admin::compte-utilisateur activite' | trans }}</dt>
                                    <dd>{{ row['activite'] }}</dd>
                                    <dt>{{ 'admin::compte-utilisateur telephone' | trans }}</dt>
                                    <dd>{{ row['tel'] }}</dd>
